<UserControl x:Class="KeepYourTime.ViewControls.ConfigurationControls.ConfigurationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:p="clr-namespace:KeepYourTime.Languages"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="400">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="309*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <StackPanel  Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Name="lbInactiveAlert" Text="{x:Static p:Language.InactivityAlert}" FontSize="24" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
            <Button Name="btExportData" Margin="5" Width="100" Height="50" Content="{x:Static p:Language.Export}" Click="btExportData_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0"  VerticalAlignment="Top">
            <CheckBox Name="chkInactivityAlert" Margin="20" Content="{x:Static p:Language.Active}" FontSize="12" FontWeight="Bold"/>


        </StackPanel>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0" VerticalAlignment="Bottom" Orientation="Horizontal" >
            <TextBlock Name="lbInactiveTime" Text="{x:Static p:Language.InactivityTime}" FontSize="16" FontWeight="Bold"/>
            <TextBox x:Name="txtInactiveTime" Margin="5" Text="{x:Static p:Language.InactiveMinutesPart2}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">
            <TextBlock Name="lbShortcuts" Text="{x:Static p:Language.Shortcut}" FontSize="24" FontWeight="Bold"/>

        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="0" VerticalAlignment="Center">
            <TextBlock Name="lbTask" Text="{x:Static p:Language.Task}" FontSize="12" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.Column="0" VerticalAlignment="Center">
            <Button Name="btApply" Margin="5" Width="100" Height="50" Content="{x:Static p:Language.Apply}"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="1" VerticalAlignment="Center">
            <Button Name="btCancel" Margin="5" Width="100" Height="50" Content="{x:Static p:Language.Cancel}"/>
        </StackPanel>
        <ComboBox Name="cbShort1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="4" VerticalAlignment="Top" Width="70
                  "/>
        <ComboBox Name="cbShort2" HorizontalAlignment="Left" Margin="10,37,0,0" Grid.Row="4" VerticalAlignment="Top" Width="70                   "/>
        <ComboBox Name="cbShort3" HorizontalAlignment="Left" Margin="10,64,0,0" Grid.Row="4" VerticalAlignment="Top" Width="70                   "/>
        <ComboBox Name="cbShort4" HorizontalAlignment="Left" Margin="10,91,0,0" Grid.Row="4" VerticalAlignment="Top" Width="70                   "/>
        <ComboBox Name="cbShort5" HorizontalAlignment="Left" Margin="10,118,0,0" Grid.Row="4" VerticalAlignment="Top" Width="70                   "/>
        <CheckBox Name="chkShift1" Content="SHIFT" HorizontalAlignment="Left" Margin="85,16,0,0" Grid.Row="4" VerticalAlignment="Top"/>
        <CheckBox Name="chkShift2" Content="SHIFT" HorizontalAlignment="Left" Margin="85,43,0,0" Grid.Row="4" VerticalAlignment="Top"/>
        <CheckBox Name="chkShift3" Content="SHIFT" HorizontalAlignment="Left" Margin="85,70,0,0" Grid.Row="4" VerticalAlignment="Top"/>
        <CheckBox Name="chkShift4" Content="SHIFT" HorizontalAlignment="Left" Margin="85,97,0,0" Grid.Row="4" VerticalAlignment="Top"/>
        <CheckBox Name="chkShift5" Content="SHIFT" HorizontalAlignment="Left" Margin="80,124,0,0" Grid.Row="4" VerticalAlignment="Top"/>
        <CheckBox Name="chkCtrl1" Content="CTRL" HorizontalAlignment="Left" Margin="137,16,0,0" Grid.Row="4" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <CheckBox Name="chkCtrl2" Content="CTRL" HorizontalAlignment="Left" Margin="136,43,0,0" Grid.Row="4" VerticalAlignment="Top"/>
        <CheckBox Name="chkCtrl3" Content="CTRL" HorizontalAlignment="Left" Margin="136,70,0,0" Grid.Row="4" VerticalAlignment="Top"/>
        <CheckBox Name="chkCtrl4" Content="CTRL" HorizontalAlignment="Left" Margin="137,97,0,0" Grid.Row="4" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <CheckBox Name="chkCtrl5" Content="CTRL" HorizontalAlignment="Left" Margin="137,124,0,0" Grid.Row="4" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <CheckBox Name="chkAlt1" Content="ALT" HorizontalAlignment="Left" Margin="6,16,0,0" Grid.Row="4" VerticalAlignment="Top" Grid.Column="1"/>
        <CheckBox Name="chkAlt2" Content="ALT" HorizontalAlignment="Left" Margin="5,43,0,0" Grid.Row="4" VerticalAlignment="Top" Grid.Column="1"/>
        <CheckBox Name="chkAlt3" Content="ALT" HorizontalAlignment="Left" Margin="6,70,0,0" Grid.Row="4" VerticalAlignment="Top" Grid.Column="1"/>
        <CheckBox Name="chkAlt4" Content="ALT" HorizontalAlignment="Left" Margin="6,97,0,0" Grid.Row="4" VerticalAlignment="Top" Grid.Column="1"/>
        <CheckBox Name="chkAlt5" Content="ALT" HorizontalAlignment="Left" Margin="10,124,0,0" Grid.Row="4" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="48,16,0,0" Grid.Row="4" TextWrapping="Wrap" Text="+" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="48,43,0,0" Grid.Row="4" TextWrapping="Wrap" Text="+" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="48,70,0,0" Grid.Row="4" TextWrapping="Wrap" Text="+" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="48,97,0,0" Grid.Row="4" TextWrapping="Wrap" Text="+" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="48,124,0,0" Grid.Row="4" TextWrapping="Wrap" Text="+" VerticalAlignment="Top"/>
        <TextBox Name="txtShortcutKey1" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="61,16,0,0" Grid.Row="4" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="40"/>
        <TextBox Name="txtShortcutKey2" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="61,44,0,0" Grid.Row="4" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="40"/>
        <TextBox Name="txtShortcutKey3" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="61,67,0,0" Grid.Row="4" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="40"/>
        <TextBox Name="txtShortcutKey4" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="61,95,0,0" Grid.Row="4" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="40"/>
        <TextBox Name="txtShortcutKey5" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="61,124,0,0" Grid.Row="4" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="40"/>
    </Grid>
</UserControl>
